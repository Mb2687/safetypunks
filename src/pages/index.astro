---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<main class="home">
		<header class="hero">
			<img
				src="/safetypunkslogo.png"
				alt="SafetyPunks logo"
				class="logo"
				width="320"
				height="320"
				loading="eager"
			/>
			<h1>SafetyPunks</h1>
			<p class="mission">
				Our core mission is to build a bold, inclusive safety culture that empowers
				people, teams, and communities to protect each other and ship resilient work.
			</p>
		</header>
	</main>
</Layout>
