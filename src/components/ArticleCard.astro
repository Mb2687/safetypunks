---
interface Props {
    title: string;
    href: string;
    body: string;
    imageUrl: string;
    kicker?: string;
    meta?: string;
}

const {
    href,
    title,
    body,
    imageUrl,
    kicker = "Safety Intel",
    meta = "Updated today"
} = Astro.props;
---
<article class="entry-item">
    <a href={href} class="entry-link">
        <div class="entry-thumbnail">
            <img src={imageUrl} alt={`${title} - ${kicker}`} loading="lazy" />
        </div>
        <div class="entry-content">
            <span class="entry-kicker">{kicker}</span>
            <h2 class="entry-title">{title}</h2>
            <p class="entry-meta">{meta}</p>
            <p class="entry-summary">{body}</p>
        </div>
    </a>
</article>

<style>
    .entry-item {
        margin-bottom: 50px;
        overflow: hidden;
    }

    .entry-item::after {
        content: "";
        display: table;
        clear: both;
    }

    .entry-link {
        text-decoration: none;
        color: inherit;
        display: block;
    }

    .entry-thumbnail {
        float: left;
        width: 37.6%;
        margin-right: 20px;
        margin-bottom: 15px;
    }

    .entry-thumbnail img {
        width: 100%;
        height: auto;
        aspect-ratio: 4 / 3;
        object-fit: cover;
        display: block;
        border-radius: var(--radius);
    }

    .entry-content {
        overflow: hidden;
    }

    .entry-kicker {
        display: block;
        color: var(--accent);
        font-size: 12px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        margin-bottom: 0.5rem;
    }

    .entry-title {
        font-family: "Georgia", "Palatino Linotype", "Book Antiqua", serif;
        font-size: 25px;
        font-weight: 700;
        line-height: 1.3;
        color: var(--ink);
        margin: 0 0 0.5rem 0;
        transition: color 0.2s ease;
    }

    .entry-link:hover .entry-title {
        color: var(--accent);
    }

    .entry-link:focus {
        outline: 2px solid var(--accent);
        outline-offset: 4px;
    }

    .entry-meta {
        font-size: 14px;
        color: var(--muted);
        margin: 0 0 0.75rem 0;
    }

    .entry-summary {
        font-size: 18px;
        line-height: 1.5;
        color: var(--ink);
        margin: 0;
    }

    @media (max-width: 768px) {
        .entry-thumbnail {
            float: none;
            width: 100%;
            margin-right: 0;
            margin-bottom: 1rem;
        }

        .entry-title {
            font-size: 22px;
        }

        .entry-summary {
            font-size: 16px;
        }

        .entry-item {
            margin-bottom: 40px;
        }
    }
</style>
