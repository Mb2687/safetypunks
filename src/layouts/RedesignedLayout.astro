---
interface Props {
    title?: string;
    description?: string;
}

const {
    title = "SafetyPunks",
    description = "Safety intel, field stories, and industry signals. Professional safety resources for bold teams."
} = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content={description}>
    <meta name="generator" content={Astro.generator}>
    <link rel="icon" type="image/png" href="/safetypunkslogo.png">

    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website">
    <meta property="og:title" content={title}>
    <meta property="og:description" content={description}>
    <meta property="og:site_name" content="SafetyPunks">

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary">
    <meta name="twitter:title" content={title}>
    <meta name="twitter:description" content={description}>

    <title>{title}</title>
    <style>
        :root {
            /* Layout */
            --max-width: 1320px;
            --main-column: 69%;
            --sidebar-column: 31%;
            --header-height: 70px;

            /* Colors - SafetyPunks Dark Theme */
            --paper: #000000;
            --header-bg: #141414;
            --surface: #1a1a1a;
            --surface-alt: #1f1f1f;
            --border-color: #2a2a2a;

            /* Text */
            --ink: #ffffff;
            --muted: #999999;
            --link: #ffd400;

            /* Accent */
            --accent: #ffd400;
            --accent-dark: #e0b700;

            /* Spacing */
            --content-padding: 40px;
            --widget-gap: 1.5rem;
            --radius: 10px;
            --shadow: 0 4px 12px rgba(0, 0, 0, 0.5);
            --shadow-soft: 0 2px 8px rgba(0, 0, 0, 0.3);
        }

        * {
            box-sizing: border-box;
        }

        body {
            background-color: var(--paper);
            color: var(--ink);
            font-family: "Noto Sans", "Trebuchet MS", "Gill Sans", sans-serif;
            font-size: 18px;
            line-height: 1.5;
            margin: 0;
        }

        .site-container {
            display: grid;
            grid-template-columns: var(--main-column) var(--sidebar-column);
            gap: 2rem;
            padding: var(--content-padding) 1.5rem;
            margin: 0 auto;
            max-width: var(--max-width);
        }

        .main-content {
            min-width: 0;
        }

        .widget-area {
            background-color: transparent;
            padding: 0;
            display: grid;
            gap: var(--widget-gap);
            align-content: start;
        }

        .site-footer {
            background-color: var(--paper);
            padding: 2rem 1.5rem;
            border-top: 1px solid var(--border-color);
        }

        a {
            color: var(--accent);
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }

        a:focus-visible {
            outline: 2px solid var(--accent);
            outline-offset: 2px;
        }

        .skip-link {
            position: absolute;
            left: -9999px;
            z-index: 999;
            padding: 1em;
            background-color: var(--accent);
            color: var(--paper);
            text-decoration: none;
            font-weight: bold;
        }

        .skip-link:focus {
            left: 50%;
            transform: translateX(-50%);
            top: 1em;
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: "Georgia", "Palatino Linotype", "Book Antiqua", serif;
            margin-top: 0;
            color: var(--ink);
            font-weight: 700;
        }

        @media (max-width: 1024px) {
            .site-container {
                grid-template-columns: 1fr;
                padding: 2rem 1.5rem;
            }

            .widget-area {
                margin-top: 2rem;
            }
        }

        @media (max-width: 768px) {
            .site-container {
                padding: 1.5rem 1rem;
            }

            body {
                font-size: 16px;
            }
        }
    </style>
</head>
<body>
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <slot name="header" />
    <div class="site-container">
        <main id="main-content" class="main-content">
            <slot />
        </main>
        <aside class="widget-area">
            <slot name="sidebar" />
        </aside>
    </div>
    <footer class="site-footer">
        <slot name="footer" />
    </footer>
</body>
</html>
